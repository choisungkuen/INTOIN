<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
    <include layout="@layout/login_actionbar"/>



        <LinearLayout
            android:layout_width="309dp"
            android:layout_height="40dp"
            android:layout_marginBottom="11dp"
            android:layout_marginTop="27dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:layout_gravity="center"

            >

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:textColor="#7c7b7c"
                android:textSize="15dp"
                />


            <EditText
                android:id="@+id/newpw_et"
                android:layout_width="246dp"
                android:layout_height="38dp"
                android:background="@drawable/l_form"
                android:ems="10"
                android:inputType="textUri"
                android:paddingLeft="5dp"
                android:textColor="#b0adaf"
                android:hint="비밀번호를 입력하세요."
                android:textSize="14dp"
                android:layout_weight="0.5"

                />


        </LinearLayout>




        <LinearLayout
            android:layout_width="309dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="21dp"
            >

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="재입력"
                android:textColor="#7c7b7c"
                android:textSize="15dp"

                />
            <EditText
                android:id="@+id/newpwre_et"
                android:layout_width="246dp"
                android:layout_height="38dp"
                android:background="@drawable/l_form"
                android:ems="10"
                android:inputType="textUri"
                android:paddingLeft="5dp"
                android:textColor="#b0adaf"
                android:hint="비밀번호를 재입력하세요."
                android:textSize="14dp"
                android:layout_weight="0.5"

                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <Button
                android:id="@+id/pass_ok_bt"
                android:layout_width="309dp"
                android:layout_height="40dp"
                android:background="@drawable/custom_button"
                android:textColor="#ffffff"
                android:text="확인"
                android:textSize="16dp"

                />


        </LinearLayout>


    </LinearLayout>

