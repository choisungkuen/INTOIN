<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:background="#ffffff"


    >


    <EditText
        android:id="@+id/customer_search_et"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rect_text_edit_rectangle3"
        android:hint="그룹명 및 이름 검색"
        android:textSize="14dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:textColor="#8c8b8b"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:drawableRight="@drawable/m_search_icon"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/customer_add_bt"
        android:layout_toStartOf="@+id/customer_add_bt" />

    <Button
        android:id="@+id/customer_add_bt"
        android:layout_width="32dp"
        android:layout_height="22dp"
        android:background="@drawable/c_plus_btn"
        android:layout_gravity="center"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="14dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



</RelativeLayout>