<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="47dp"
    android:orientation="horizontal"
    android:background="#00b58a"

    >

    <Button
        android:id="@+id/search_del_bt"
        android:layout_width="30dp"
        android:layout_height="31dp"
        android:background="@drawable/l_back"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/search_et"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rect_text_edit_rectangle2"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:hint="검색어 입력"
        android:textSize="14dp"
        android:textColor="#8c8b8b"
        android:paddingLeft="21dp"
        android:paddingRight="19dp"
        android:drawableRight="@drawable/s_delet_btn"
        android:layout_toRightOf="@+id/search_del_bt"
        android:layout_toEndOf="@+id/search_del_bt"
        android:layout_alignBottom="@+id/search_del_bt"
        android:layout_alignTop="@+id/search_del_bt" />








</RelativeLayout>